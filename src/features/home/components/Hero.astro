    overflow: visible;
    padding: 12px 40px;
    text-align: center;
    text-transform: none;
    touch-action: manipulation;
    user-select: none;
    -webkit-user-select: none;
    vertical-align: middle;
    white-space: nowrap;
    font-family: var(--body);
  }

  .button-50 {
    margin-top: 24px;
    font-variation-settings: 'wght' 400, 'wdth' 80;
    font-size: 24px;
  }

  .button-50:focus {
    text-decoration: none;
  }

