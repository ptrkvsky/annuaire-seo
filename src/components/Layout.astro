---
import type { SanityCategory } from '@/interfaces/SanityCategory';
import { getSession } from 'auth-astro';
import { authOpts } from '../pages/api/auth/[...astroAuth]';
import Footer from './Footer';
import NavbarAdmin from './NavbarAdmin.astro';
import NavbarGoogle from './NavbarGoogle.astro';

export interface Props {
  title: string;
  categoriesMenu?: SanityCategory[];
}

const { title, categoriesMenu } = Astro.props as Props;
const isAdminRoute = Astro.url.pathname.includes('/admin/');
let session = await getSession(Astro.request, authOpts);
let accessGranted = true;

if (isAdminRoute && !session) {
  accessGranted = false;
}
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta name="robots" content="noindex, follow" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="conteneur">
      {accessGranted ? <slot /> : <h1>Rien Ã  voir ici</h1>}
    </main>
    <header>
      <NavbarAdmin session={session} />
      <NavbarGoogle categoriesMenu={categoriesMenu} />
    </header>
    <Footer client:only />
  </body>
</html>
<style is:global lang="scss">
  :root {
    --title: Didone, Poppins, -apple-system, BlinkMacSystemFont, Arial Black,
      Arial Bold, Arial, sans-serif;
    --body: Montreal, sans-serif;
    --body-bolor: #330b4f;
    --dark-primary: #ca171d;
    --light-primary: #e10061;
    --light-background: #e1000012;
    --is-it-cold: #0024ff;
    --main-gradient: linear-gradient(
      90deg,
      rgba(131, 58, 180, 1) 0%,
      rgba(253, 29, 29, 1) 50%,
      rgba(252, 176, 69, 1) 100%
    );
    --background-main: rgb(248, 248, 251);
    --mw-desktop: 1440px;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    // font-family: var(--title);
    font-variation-settings: 'wght' 400, 'wdth' 80;
  }

  main {
    max-width: var(--mw-desktop);
    margin: 0 auto;
  }

  footer a {
    text-decoration: none;
  }

  body {
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    font-family: var(--body);
    font-variation-settings: 'wght' 450;
    font-weight: 450;
    background-color: var(--background-main);
  }
  img {
    max-width: 100%;
    height: auto;
  }
  header {
    order: -1;
  }
  main {
    flex: 1;
    width: 100%;
  }
  footer {
    background-color: #000;
    color: #fff;
    padding: 16px;
  }
  * {
    box-sizing: border-box;
  }

  a {
    color: var(--body-color);
  }

  html {
    font-family: system-ui, sans-serif;
    -webkit-font-smoothing: antialiased;
    font-size: 16px;
  }

  header {
    box-shadow: 0 2px 17px rgb(0 0 0 / 7%);
  }

  .conteneur {
    margin-left: auto;
    margin-right: auto;
    max-width: var(--mw-desktop);

    @media screen and (max-width: 1440px) {
      padding-left: 8px;
      padding-right: 8px;
      max-width: 100%;
    }
  }

  .truncate {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3; /* number of lines to show */
    line-clamp: 3;
    -webkit-box-orient: vertical;
  }

  @font-face {
    font-family: 'Didone';
    src: url('/fonts/didone_variable.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Montreal';
    src: url('/fonts/montreal.woff2') format('woff2');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
</style>
